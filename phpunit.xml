<?xml version="1.0" encoding="UTF-8"?>

<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.8/phpunit.xsd"
         backupGlobals="false"
         colors="true"
         bootstrap="vendor/autoload.php"
>
    <php>
        <ini name="error_reporting" value="-1" />

    </php>

    <testsuites>
        <testsuite name="Number To Words Converter Test Suite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>src</directory>

        </whitelist>
    </filter>
    <logging>
        <log type="coverage-text" target="php://stdout" lowUpperBound="50" highLowerBound="75"/>
        <log type="coverage-html" target="report/logs/coverage" highlight="true" lowUpperBound="50" highLowerBound="75"/>
        <log type="coverage-clover" target="report/logs/clover.xml"/>
    </logging>
</phpunit>
